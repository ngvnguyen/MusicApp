<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="24dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/playlist"
        android:background="@drawable/item_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In your eyes"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/item_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_img"/>
    <TextView
        android:id="@+id/item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The weekend"
        android:textSize="@dimen/item_content"
        android:textColor="@color/not_select"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/item_img"
        app:layout_constraintBottom_toBottomOf="@id/item_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>